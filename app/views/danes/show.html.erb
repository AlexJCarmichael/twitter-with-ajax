<h1>Here is that Dane</h1>

<div class="vivek-card">
  <p> <%= @dane.danish %> </p>
  <p> <%= @dane.bio %> </p>
  <p> <%= @dane.first_name %> <%= @dane.last_name %> </p>
</div>
<% if session[:dane_id] == @vivek.dane_id %>
   <%= link_to "Delete", vivek_path(@vivek), method: :delete, data: { confirm: "Are you sure you want to delete this teacher?
     (All students associated to this teacher will be deleted)" }, class: "delete btn" %>
  <% end %>

<div class="spacer"></div>
<% viveks = Vivek.all.where("dane_id" == @dane.id) %>

<% viveks.each do |vivek| %>
  <div class="vivek-card">
    <p>
      <%= link_to "#{vivek.dane.danish}", dane_path(vivek.dane_id), class: "show-dane" %> |
      <%= link_to "#{vivek.body}", vivek_path(vivek.id), class: "show-vivek" %>
    </p>
    <p class="time">
      <%= vivek.time %>
    </p>
  </div>
<% end %>
