<!DOCTYPE html>
<html>
<head>
  <title>Danish</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Danes", danes_path %></li>
    </ul>
    <ul class="right-hand-side">
      <% if signed_in? %>
        <li><%= link_to 'Logout', sign_out_path, method: :DELETE %></li>
      <% else %>
        <li><%= link_to "Sign up?", new_dane_path %></li>
        <li><%= link_to 'Login', sign_in_path %></li>
      <% end %>
    </ul>
  </nav>

  <% if signed_in? %>
    <%= link_to "What is on your mind?", new_vivek_path, class: "btn" %>
  <% end %>

  <div class="container">
    <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, { class: "flash #{name}" }) %>
    <% end %>
    <%= yield %>
  </div>

</body>
</html>
